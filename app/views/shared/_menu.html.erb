<%= provide :main_menu do %>
  <nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Navigation Switch">
        <span class="navbar-toggler-icon"></span>
      </button>
      <%= link_to root_path, class: 'navbar-brand' do %>
        <%= image_tag 'logo.svg', alt: 'AS service Logo' %>
      <% end %>
      <div class="collapse navbar-collapse" id="navbarToggler">
        <ul class="navbar-nav me-auto mb-2 mx-2 mb-lg-0">
          <li><%= nav_tab t('menu.home'), root_path, { class: 'nav-link', current_page: current_page } %></li>
          <li><%= nav_tab t('menu.clients'), clients_path, { class: 'nav-link', current_page: current_page } %></li>
          <li><%= nav_tab t('menu.new_client'), new_client_path, { class: 'nav-link', current_page: current_page } %></li>
          <li><%= nav_tab t('menu.tickets'), tickets_path, { class: 'nav-link', current_page: current_page } %></li>
          <li><%= nav_tab t('menu.calendar'), services_calendar_path, { class: 'nav-link', current_page: current_page } %></li>
        </ul>

        <ul class="nav col-12 col-lg-auto m-2">
          <li class="dropdown">
            <%= link_to '#', class: 'btn btn-outline-secondary btn-sm dropdown-toggle', 
                            data: { "bs-toggle":"dropdown" } do %>
              <i class="bi bi-translate"></i>
              <%= t I18n.locale %>
            <% end %>

            <ul class="dropdown-menu">
              <% I18n.available_locales.each do |locale| %>
                <li>
                  <%= link_to t(locale), url_for(locale: locale), class: 'dropdown-item' %>
                </li>
              <% end %>
            </ul>
          </li>
        </ul>

        <ul class="nav col-12 col-lg-auto m-2">
          <%= link_to t('menu.sign_out'), auth.sign_out_path, data: { turbo_method: :delete }, class: 'btn btn-outline-secondary btn-sm' %>
        </ul>
      </div>
    </div>
  </nav>
<% end %>