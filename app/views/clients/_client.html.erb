<div class="card md-3">
  <div class="card-body">

    <h1 class="display-6"><%= client.last_name %> <%= client.first_name %></h1>

    <h4>
      <small class="text-muted"><%= t '.purifier' %></small>
      <%= client.purifier %>
    </h4>

    <h4>
      <small class="text-muted"><%= t '.date_of_installation' %></small>
      <% if client.installations.present? %>
        <time datetime="<%= client.installations.last.formatted_date %>">
          <%= client.installations.last.formatted_date %>
        </time>
      <% else %>
        <%= t '.no_info' %>
      <% end %>
    </h4>

    <h4>
      <small class="text-muted"><%= t '.next_service_date' %></small>
      <% if client.services.present? %>
        <time datetime="<%= client.services.last.formatted_date %>">
          <%= client.services.last.formatted_date %>
      <% else %>
        <%= t '.no_info' %>
      <% end %>
    </h4>

    <h4>
      <small class="text-muted"><%= t '.phone_number' %></small>
      <%= client.phone %>
    </h4>

    <h4>
      <small class="text-muted"><%= t '.address' %></small>
      <%= client.address %>
    </h4>

  </div>
</div>