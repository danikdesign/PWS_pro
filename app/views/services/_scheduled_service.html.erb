<h4><%= t '.scheduled_service' %></h4>
<div class="table-responsive">
  <table class="table">
    <thead class="table-light">
      <tr>
        <th scope="col"><%= t '.date' %></th>
        <th scope="col"><%= t '.replacement' %></th>
        <th scope="col"><%= t '.status' %></th>
        <th scope="col"><%= t '.notes' %></th>
        <th scope="col"><%= t '.ticket_datetime' %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row"><%= service.formatted_date %></th>
        <td><%= render service.purifier_parts %></td>
        <% if service.status == true %>
          <th class="text-success">
            <%= t '.completed' %>
          </th>
        <% else %>
          <th class="text-danger">
            <%= t '.not_completed' %>
          </th>
        <% end %>
        <td><%= service.notes %></td>
        <td class="text-danger">
          <% if service.tickets.present? %>
            <%= service.tickets.last.formatted_datetime %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
  <%= link_to t('.buttons.edit'), 
              edit_client_service_path(@client, service), 
              class: 'btn btn-outline-danger btn-sm' %>
  <%= render 'tickets/add_ticket', ticket_for: service %>
  <hr /> 
</div>
